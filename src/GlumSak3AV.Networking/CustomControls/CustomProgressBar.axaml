<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="GlumSak3AV.Networking.CustomControls.CustomProgressBar"
             Margin="0 4 0  0">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="4*" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <ProgressBar
            x:FieldModifier="public"
            x:Name="Download_ProgressBar"
            Grid.Row="2"
            Margin="0,0,2,0"
            VerticalAlignment="Stretch"
            LargeChange="Infinity">
        </ProgressBar>

        <TextBlock
            x:FieldModifier="public"
            x:Name="DownloadProgress_TextBlock"
            Margin="0,0,0,2"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Text="Download starting..." />

        <Button
            x:Name="CancelDownload_Button"
            Grid.Column="1"
            Height="28"
            Margin="2,0,0,0"
            HorizontalAlignment="Stretch"
            Content="Cancel Download" 
            Click="CancelDownload_Button_OnClick"/>
    </Grid>
</UserControl>
